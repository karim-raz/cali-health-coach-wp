<Page
    x:Class="App2.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
      xmlns:CustomLiveTiles="using:CustomLiveTiles" Width="398.756">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="first_use1.png"/>
    </Page.Background>
    <Page.BottomAppBar>
        <CommandBar Height="60" Background="#FF1E88E5">

            <AppBarButton x:ConnectionId='1' Icon="Help" Label="About"                            />



        </CommandBar>

    </Page.BottomAppBar>
    <Grid Margin="0,0.333,0.167,-0.333" >
 

        <CustomLiveTiles:MediumTileIcon x:ConnectionId='2' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                              Message="here you log your daily diet"
                                              Title="Diets"
                                        
                                              BackTitle="Diets"
                                              BackgroundColor="#FF1E88E5"
                                              BackgroundIcon="/diets.png"
                                                                             Background="#FF1E88E5" 
                                              Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="35,63,214,367"/>
        <CustomLiveTiles:MediumTileFlipIcon x:ConnectionId='3'  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
         	Message="look at how much steps you did today"
         	Title="Steps"
                                        
                                        
         	BackTitle="Steps"
         	BackgroundColor="#FF1E88E5"
         	BackgroundIcon="/steps2s.png"
         	                                 Background="#FF1E88E5" 
         	Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="209,63,41,367"/>
        <CustomLiveTiles:MediumTileIcon x:ConnectionId='4' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        	Message="read some tips to have a good health"
        	Title="Tips"
        	BackTitle="Tips"
        	BackgroundColor="#FF1E88E5"
        	BackgroundIcon="/tofehs.png"
        	                                 Background="#FF1E88E5" 
        	Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="35,233,215,196"/>
        <CustomLiveTiles:MediumTileIcon x:ConnectionId='5' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        	Message="set your Goal weight"
        	Title="goal weight"
        	BackTitle="goal weight"
        	BackgroundColor="#FF1E88E5"
        	BackgroundIcon="/goal.png"
        	                                 Background="#FF1E88E5" 
        	Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="209,233,41,197"/>
        <CustomLiveTiles:MediumTileIcon x:ConnectionId='6' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        	Message="set your new Weight"
        	Title="Weight in"
        	BackTitle="Weight in"
        	BackgroundColor="#FF1E88E5"
        	BackgroundIcon="/scale.png"
        	                                 Background="#FF1E88E5" 
        	Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="35,405,215,30"/>
        <CustomLiveTiles:MediumTileIcon x:ConnectionId='7' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        	Message="see your progress"
        	Title="LogBook"
        	BackTitle="LogBook"
        	BackgroundColor="#FF1E88E5"
        	BackgroundIcon="/book.png"
        	                                 Background="#FF1E88E5" 
        	Foreground="#FFFBF4F4" FontFamily="Segoe UI" Margin="209,405,41,30"/>
        <TextBlock x:Name="textBlock" Margin="27,37,277,522" TextWrapping="Wrap" Text="Cali" FontSize="45"/>


    </Grid>

</Page>

