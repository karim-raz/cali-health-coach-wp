<UserControl
    x:Class="CustomLiveTiles.WideTileImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:CustomLiveTiles"
    x:Name="myUserControl">

    <UserControl.Resources>

        <Storyboard x:Key="liveTileAnim1_Part1" x:Name="liveTileAnim1_Part1" Duration="0:0:4">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01.5" Storyboard.TargetName="panel1" Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="0" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="6" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="12" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="24" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="36" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="45" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="57" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="75" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimation Duration="0:0:0" BeginTime="00:00:01.5"
                                Storyboard.TargetName="grdContainer"
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1" />

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01.5" Storyboard.TargetName="panel2" Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="0" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="6" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="12" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="24" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="36" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="45" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="57" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="75" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="liveTileAnim1_Part2" x:Name="liveTileAnim1_Part2" Duration="0:0:4">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="panel1" Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="75" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="81" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="87" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="98" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="110" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="119" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="131" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="150" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="panel2" Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="75" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="81" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="87" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="98" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="110" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="119" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="131" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="150" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- go up -->

        <Storyboard x:Key="liveTileAnim2_Part1" x:Name="liveTileAnim2_Part1" Duration="0:0:4">

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="panel1"
                                           Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="150" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="131" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="119" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="110" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="98" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="87" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="81" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="75" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="panel2"
                                           Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="150" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="131" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="119" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="110" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="98" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="87" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="81" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="75" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="liveTileAnim2_Part2" x:Name="liveTileAnim2_Part2"
                    Duration="0:0:4">

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01.5"
                                           Storyboard.TargetName="panel1" Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="75" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="57" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="45" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="36" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="24" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="12" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="6" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="0" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames BeginTime="00:00:01.5"
                                           Storyboard.TargetName="panel2"
                                           Storyboard.TargetProperty="Y">
                <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="75" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="57" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="45" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="36" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="24" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.480" Value="12" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.580" Value="6" />
                <SplineDoubleKeyFrame KeyTime="00:00:00.700" Value="0" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimation Duration="0:0:0" BeginTime="00:00:02.2"
                                Storyboard.TargetName="grdContainer"
                                Storyboard.TargetProperty="Opacity"
                                From="1" To="0" />
        </Storyboard>
    </UserControl.Resources>

    <StackPanel Width="310" Height="150"
                Name="myStack">
        <Grid Name="grdContainer"
              Margin="0, -149, 0, 0"
              Opacity="0"
              Canvas.ZIndex="2"
              Width="310" Height="150">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="panel1" Y="0" />
            </Grid.RenderTransform>
            <TextBlock Name="txtTitle"
                       Margin="0,0,10,5"
                       Width="310"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       FontFamily="Segoe UI"
                       FontSize="23" />
        </Grid>
        <Grid Name="grid2" Canvas.ZIndex="1"
              Width="310" Height="150">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="panel2" Y="0" />
            </Grid.RenderTransform>
            <Image Width="310" Height="150"
                   Stretch="UniformToFill"
                   Name="imgBackground" />
        </Grid>
    </StackPanel>
</UserControl>

